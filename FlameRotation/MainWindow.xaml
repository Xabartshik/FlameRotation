<Window x:Class="FlameRotation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вращающаяся пирамида" Width="800" Height="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Canvas для отрисовки пирамиды -->
        <Canvas x:Name="canvas" Background="#FFF0F0F0" />

        <!-- Панель управления -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Background="#FFFFFFFF">
            <TextBlock Text="Оси вращения:" FontWeight="Bold" Margin="0 0 0 5" />
            <CheckBox x:Name="checkBoxX" Content="Ось X" Margin="0 2" />
            <CheckBox x:Name="checkBoxY" Content="Ось Y" Margin="0 2" />
            <CheckBox x:Name="checkBoxZ" Content="Ось Z" Margin="0 2" />
        </StackPanel>
    </Grid>
</Window>